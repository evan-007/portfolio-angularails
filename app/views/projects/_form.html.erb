<%= tinymce %>
<div class="container">
<div class='row'>
	<div class="col-md-8">
		<%= form_for @project do |f| %>
		<%= f.label :title %>
		<%= f.text_field :title, class: "form-control" %><br />

		<%= f.label :description %>
    
		<%= f.text_area :description, class: "tinymce" %><br />

		<%= f.label :git %>
		<%= f.text_field :git, class: "form-control" %><br />

		<%= f.label :link %>
		<%= f.text_field :link, class: "form-control" %><br />

		<% if @project.image.exists? %>
		<p>Current image:</p>
		<%= image_tag @project.image.url(:thumb) %>
		<% end %>
		<%= f.file_field :image %><br />

		<p>
			<%= f.label :tags %>
      <%= f.collection_select :tag_ids, Tag.order(:name), :id, :name, {}, { include_blank: true, multiple: true, size: 5} %>
		</p>
    
		<%= f.submit %>
		<% end %>
	</div>
</div>
</div>

<script>
    $(document).ready(function() { $('#project_tag_ids').chosen({width: "50%"}); });

</script>